{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for SecureVault password manager",
  "windows": ["main"],
  "permissions": [
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/*" },
        { "path": "$APPDATA/**" }
      ]
    },
    "dialog:allow-save",
    "dialog:allow-open",
    "clipboard-manager:allow-write-text"
  ]
}
